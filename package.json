{
  "name": "coco",
  "version": "1.0.2",
  "homepage": "https://cococss.com",
  "author": {
    "name": "Raisty"
  },
  "description": "Modern CSS framework based on Flexbox",
  "main": "style/coco.sass",
  "unpkg": "dist/css/coco.css",
  "style": "coco/dist/css/coco.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CryptoHub-place/coco.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/CryptoHub-place/coco/issues"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "clean-css-cli": "^4.1.11",
    "copyfiles": "^2.1.0",
    "gulp": "latest",
    "gulp-ext-replace": "^0.3.0",
    "gulp-spawn": "^0.4.4",
    "node-sass": "^4.8.3",
    "postcss-cli": "^5.0.0",
    "rimraf": "^2.6.2",
    "sassdoc": "latest"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-css && npm run build-autoprefix && npm run build-cleancss && npm run build-scss",
    "build-autoprefix": "postcss --use autoprefixer --map false --output dist/css/coco.css dist/css/coco.css",
    "build-cleancss": "cleancss -o dist/css/coco.min.css dist/css/coco.css",
    "build-clean": "rimraf css",
    "build-css": "node-sass --output-style expanded --source-map true style/coco.sass dist/css/coco.css",
    "build-docs": "gulp scss-docs && gulp docs && rm -rf dist/docs",
    "build-sass": "copyfiles 'style/**/*.sass' 'dist/sass'",
    "build-scss": "gulp scss",
    "compress": "VER=$(echo $npm_package_version | sed s/[.]/-/g) && mv dist coco-v$npm_package_version && zip -r coco-v$VER.zip coco-v$npm_package_version && mv coco-v$npm_package_version dist",
    "deploy": "npm run build",
    "start": "npm run build-css -- --watch",
    "release": "npm run build && npm run build-docs && npm run compress"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "style"
  ]
}
